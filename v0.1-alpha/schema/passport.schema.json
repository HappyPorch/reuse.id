{
    "id": "https://reuse-standard.org/v0.1-alpha/schema/passport.schema.json#",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "asset_id": {
            "type": "string"
        },
        "in_reuse": {
            "type": "boolean"
        },
        "last_activity": {
            "type": "string"
        },
        "last_activity_date": {
            "type": "string",
            "format": "date-time"
        },
        "last_activity_location": {
            "$ref": "https://reuse-standard.org/v0.1-alpha/schema/location.schema.json#"
        },
        "completed_cycle_count": {
            "type": "number"
        },
        "other_ref": {
            "type": "string"
        },
        "decommission_reason": {
            "type": "string"
        }
    },
    "required": ["asset_id", "in_reuse"]
}
