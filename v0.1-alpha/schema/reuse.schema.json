{
    "id": "https://reuse-standard.org/v0.1-alpha/schema/reuse.schema.json#",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "org": {
            "$ref": "https://reuse-standard.org/v0.1-alpha/schema/org.schema.json#"
        },
        "date": {
            "type": "string",
            "format": "date-time"
        },
        "cycles":{
            "type": "array",
            "uniqueItems": true,
            "items": { "$ref": "https://reuse-standard.org/v0.1-alpha/schema/cycle.schema.json#" }
        },
        "date-range":  { "$ref": "#/definitions/date_range" },
        "passports":{
            "type": "array",
            "uniqueItems": true,
            "items": { "$ref": "https://reuse-standard.org/v0.1-alpha/schema/passport.schema.json#" }
        },
        "passport_history":{
            "type": "array",
            "uniqueItems": true,
            "items": { "$ref": "https://reuse-standard.org/v0.1-alpha/schema/passport_history.schema.json#" }
        }
    },
    "required": ["org", "date", "cycles"],
    "definitions": {
        "date_range": {
            "type": "object",
            "properties": {
                "date_start": {
                    "type": "string",
                    "format": "date-time"
                },
                "date_end": {
                    "type": "string",
                    "format": "date-time"
                }
            },
            "required": ["date_start", "date_end"]
        }
    }
} 